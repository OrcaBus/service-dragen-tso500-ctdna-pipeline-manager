{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "s3Uri": {
      "pattern": "^s3://[a-zA-Z0-9_-]*/[a-zA-Z0-9_/-]*"
    },
    "s3UriDirectory": {
      "pattern": "^s3://[a-zA-Z0-9_-]*/[a-zA-Z0-9_/-]*/$"
    },
    "fastqListRow": {
      "type": "object",
      "properties": {
        "rgid": {
          "type": "string"
        },
        "rglb": {
          "type": "string"
        },
        "rgsm": {
          "type": "string"
        },
        "lane": {
          "type": "integer"
        },
        "read1FileUri": {
          "$ref": "#/$defs/s3Uri"
        },
        "read2FileUri": {
          "$ref": "#/$defs/s3Uri"
        }
      },
      "required": ["rgid", "rglb", "rgsm", "lane", "read1FileUri", "read2FileUri"],
      "additionalProperties": true
    },
    "inputs": {
      "type": "object",
      "properties": {
        "sampleName": {
          "type": "string"
        },
        "fastqListRows": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/fastqListRow"
          }
        }
      },
      "required": ["sampleName", "fastqListRows"],
      "allowAdditionalProperties": true
    },
    "tags": {
      "type": "object",
      "properties": {
        "libraryId": {
          "type": "string"
        },
        "fastqRgidList": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "subjectId": {
          "type": "string"
        },
        "individualId": {
          "type": "string"
        }
      },
      "required": ["libraryId", "fastqRgidList"]
    },
    "engineParameters": {
      "type": "object",
      "properties": {
        "projectId": {
          "type": "string"
        },
        "pipelineId": {
          "type": "string"
        },
        "outputUri": {
          "$ref": "#/$defs/s3UriDirectory"
        },
        "logsUri": {
          "$ref": "#/$defs/s3UriDirectory"
        },
        "cacheUri": {
          "$ref": "#/$defs/s3UriDirectory"
        }
      },
      "required": ["projectId", "pipelineId", "outputUri", "cacheUri"],
      "allowAdditionalProperties": true
    }
  },
  "type": "object",
  "properties": {
    "inputs": {
      "$ref": "#/$defs/inputs"
    },
    "tags": {
      "$ref": "#/$defs/tags"
    },
    "engineParameters": {
      "$ref": "#/$defs/engineParameters"
    }
  },
  "required": ["inputs", "tags", "engineParameters"]
}
